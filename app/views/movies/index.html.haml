-# in app/views/movies/index.html.haml
%h3 All Movies
= flash[:notice]
%table#movies
  %thead
    %tr
      %th #
      %th Movie Title
      %th Rating
      %th Relsease Date
      %th More Info
  %tbody
    -@movies.each_with_index do |movie, index|
      %tr
        %td= index
        %td
          = link_to "#{movie.title}", edit_movie_path(movie); 
          = button_to "Delete", movie_path(movie), :method => :delete, :confirm => "are you sure?"
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
= link_to "Add a New Movie", new_movie_path
-# debug(@movies)
-# raise @movies.inspect
-# raise params.inspect
